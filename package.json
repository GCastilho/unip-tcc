{
  "name": "unip-tcc",
  "version": "1.0.0",
  "description": "Cryptocurrency exchange webserver",
  "main": "src/server.js",
  "scripts": {
    "start": "node build/main_server/index.js",
    "start:nano": "npm start --prefix ./build/external_modules/nano",
    "start:bitcoin": "npm start --prefix ./build/external_modules/bitcoin",
    "dev": "concurrently --kill-others-on-fail \"env PORT=3001 npm run dev-server\" \"npm run dev-client\"",
    "build": "npm run build:clean && npm run build:server && npm run build:svelte && npm run build:restruct && npm run build:config",
    "eslint": "eslint . --ext .js,.ts",
    "eslint-fix": "eslint --fix .",
    "dev-server": "env-cmd -f ./cfg/dev.env ts-node-dev --inspect -- src/index.js",
    "dev-client": "npm run dev --prefix ./client",
    "build:clean": "rm -rf ./public && rm -rf ./build",
    "build:server": "tsc --build",
    "build:svelte": "npm run export --prefix ./client",
    "build:restruct": "mv ./build/src ./build/main_server && mv ./public ./build",
    "build:config": "cpy external_modules '!**/node_modules' '!**/*.js' '!**/*.ts' build --parents",
    "build:dep-install": "npm install --prefix ./build/external_modules/bitcoin && npm install --prefix ./build/external_modules/common && npm install --prefix ./build/external_modules/nano",
    "dep-install": "npm run dep-install:main && npm run dep-install:client && npm run dep-install:common && npm run dep-install:nano && npm run dep-install:bitcoin",
    "dep-install:main": "npm install",
    "dep-install:client": "npm install --prefix ./client",
    "dep-install:common": "npm install --prefix ./external_modules/common",
    "dep-install:nano": "npm install --prefix ./external_modules/nano",
    "dep-install:bitcoin": "npm install --prefix ./external_modules/bitcoin"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "env-cmd": "^10.1.0",
    "express": "^4.17.1",
    "js-sha512": "^0.8.0",
    "mongoose": "^5.9.2",
    "multicoin-address-validator": "^0.4.1",
    "randomstring": "^1.1.5",
    "routes": "^2.1.0",
    "socket.io": "^2.3.0",
    "socket.io-stream": "^0.9.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.2",
    "@types/mongoose": "^5.7.1",
    "@types/node": "^12.12.19",
    "@types/randomstring": "^1.1.6",
    "@types/socket.io": "^2.1.4",
    "@types/socket.io-client": "^1.4.32",
    "@types/ws": "^7.2.1",
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.20.0",
    "concurrently": "^5.1.0",
    "cpy-cli": "2.0.0",
    "eslint": "^6.8.0",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.8.2"
  }
}
