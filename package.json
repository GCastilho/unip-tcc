{
  "name": "unip-tcc",
  "version": "1.0.0",
  "description": "Cryptocurrency exchange webserver",
  "main": "src/server.js",
  "scripts": {
    "start": "node build/index.js",
    "dev": "npm run eslint && concurrently --kill-others-on-fail \"npm run dev-server\" \"npm run dev-client\"",
    "build": "rm -rf ./build && tsc --build",
    "test": "env-cmd -f ./cfg/test.env jest",
    "eslint": "eslint .",
    "eslint-fix": "eslint --fix .",
    "testdaemon": "env-cmd -f ./cfg/test.env jest --watchAll --verbose",
    "dev-server": "env-cmd -f ./cfg/dev.env nodemon --inspect src/index.js",
    "dev-server-ts": "env-cmd -f ./cfg/dev.env ts-node-dev src/index.ts --inspect",
    "dev-client": "npm start --prefix ./client"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.19.0",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "js-sha512": "^0.8.0",
    "mongoose": "^5.7.6",
    "nano-address-validator": "^3.0.0",
    "randomstring": "^1.1.5",
    "socket.io": "^2.3.0",
    "socket.io-client": "^2.3.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.2",
    "@types/node": "^12.12.7",
    "@types/socket.io": "^2.1.4",
    "concurrently": "^5.0.0",
    "cookieparser": "^0.1.0",
    "env-cmd": "^10.0.1",
    "eslint": "^6.6.0",
    "eslint-plugin-flowtype": "^4.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.2.0",
    "jest": "^24.8.0",
    "nodemon": "^1.19.4",
    "supertest": "^4.0.2",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.7.2"
  }
}
