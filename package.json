{
  "name": "unip-tcc",
  "version": "1.0.0",
  "description": "Cryptocurrency exchange webserver",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "concurrently --kill-others-on-fail \"npm run dev-server\" \"npm run dev-client\"",
    "test": "env-cmd -f ./cfg/test.env jest",
    "testdaemon": "env-cmd -f ./cfg/test.env jest --watchAll --verbose",
    "dev-server": "env-cmd -f ./cfg/dev.env nodemon --inspect src/index.js",
    "dev-client": "npm start --prefix ./client"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.19.0",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "js-sha512": "^0.8.0",
    "mongoose": "^5.7.3",
    "nano-address-validator": "^3.0.0",
    "randomstring": "^1.1.5",
    "socket.io": "^2.3.0",
    "socket.io-client": "^2.3.0"
  },
  "devDependencies": {
    "concurrently": "^4.1.2",
    "cookieparser": "^0.1.0",
    "env-cmd": "^10.0.1",
    "jest": "^24.8.0",
    "nodemon": "^1.19.3",
    "supertest": "^4.0.2"
  }
}
