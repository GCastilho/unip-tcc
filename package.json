{
  "name": "unip-tcc",
  "version": "1.0.0",
  "description": "Cryptocurrency exchange webserver",
  "scripts": {
    "start": "concurrently --kill-others-on-fail \"npm run start:server\" \"npm run start:sapper\"",
    "start:server": "node build/main_server/index.js",
    "start:sapper": "npm start --prefix ./build/sapper",
    "start:nano": "npm start --prefix ./build/external_modules/nano",
    "start:bitcoin": "npm start --prefix ./build/external_modules/bitcoin",
    "test": "env-cmd -f ./cfg/test.env ts-mocha --exit \"tests/**/*.test.+(ts|js)\"",
    "dev": "npm run eslint && concurrently --kill-others-on-fail \"npm run dev-server\" \"npm run dev-client\"",
    "dev-server": "env-cmd -f ./cfg/dev.env ts-node-dev --inspect -- src/index.js",
    "dev-client": "npm run dev --prefix ./client",
    "dep-install": "npm install && npm-recursive-install --rootDir=client && npm-recursive-install --rootDir=external_modules",
    "eslint": "eslint . --ext .js,.ts",
    "eslint-fix": "eslint --fix . --ext .js,.ts",
    "build": "npm run eslint && npm run build:clean && npm run build:server && npm run build:svelte && npm run build:restruct && npm run build:config",
    "build:clean": "del-cli ./public && del-cli ./build",
    "build:server": "tsc --build",
    "build:svelte": "npm run build --prefix ./client",
    "build:restruct": "move-cli ./build/src ./build/main_server && move-cli ./client/__sapper__/build ./build/sapper",
    "build:config": "copyfiles -E external_modules/** -e **/node_modules/** -e **/*.js -e **/*.ts build/ && copyfiles -E package* build/main_server/",
    "build:dep-install": "npm-recursive-install --rootDir=build --production"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "env-cmd": "^10.1.0",
    "express": "^4.17.1",
    "js-sha512": "^0.8.0",
    "loglevel": "^1.6.7",
    "mongoose": "^5.9.7",
    "multicoin-address-validator": "^0.4.1",
    "randomstring": "^1.1.5",
    "routes": "^2.1.0",
    "socket.io": "^2.3.0",
    "socket.io-stream": "^0.9.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/chai-as-promised": "^7.1.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.7",
    "@types/express": "^4.17.4",
    "@types/mocha": "^7.0.2",
    "@types/mongoose": "^5.7.8",
    "@types/node": "^13.11.0",
    "@types/randomstring": "^1.1.6",
    "@types/sinon": "^9.0.4",
    "@types/socket.io": "^2.1.4",
    "@types/socket.io-client": "^1.4.32",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "concurrently": "^5.1.0",
    "cookieparser": "^0.1.0",
    "copyfiles": "^2.2.0",
    "del-cli": "^3.0.0",
    "eslint": "^6.8.0",
    "mocha": "^7.1.1",
    "move-cli": "^1.2.1",
    "recursive-install": "^1.4.0",
    "sinon": "^9.0.3",
    "socket.io-client": "^2.3.0",
    "supertest": "^4.0.2",
    "ts-mocha": "^7.0.0",
    "ts-mock-imports": "^1.3.0",
    "ts-node-dev": "^1.0.0-pre.44",
    "typed-emitter": "^1.0.0",
    "typescript": "^3.8.3"
  }
}
